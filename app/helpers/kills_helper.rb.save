module KillsHelper
  def pretty_name(name)
    name.gsub(/\^\d/, '')
  end

  def pretty_gun(name)
    case name
    when "kar98k_sniper_mp"
      "Scoped Kar98k"
    when "shotgun_mp"
      "M1897 Trench Gun"
    when "g43_mp"
      "Gewehr 43"
    when ""
    when ""
      ""
      ""
    else
      name.gsub(/_mp\z/, '')
    end
  end
end
