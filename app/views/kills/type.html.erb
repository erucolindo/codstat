<h2><%= params[:id] %></h2>

<div class="rbox">
  <h4>Totals</h4>
  <div class="row">
    <div class="six columns"><%= pie_chart @charts[:kills], width: "350px", library: { legend: "none", title: "Kills" } %></div>
    <div class="six columns"><%= pie_chart @charts[:deaths], width: "350px", library: { legend: "none", title: "Deaths" } %></div>
  </div>
</div>
<br/>

<div class="rbox">
  <h4>Weapon Usage</h4>
  <%= column_chart @charts[:kills_percent], library: { vAxis: { title: "%" } } %>
</div>
<br/>

<div class="rbox">
  <h4>Ranges</h4>
  <%= area_chart [ { name: "Kills", data: @charts[:range] }, { name: "Headshots", data: @charts[:range_hs] } ], discrete: true, stacked: false, library: { legend: "none", hAxis: { title: "Range (m)" } } %>
</div>
<br/>
