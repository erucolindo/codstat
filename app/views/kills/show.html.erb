			<td><%= pretty_name(kill[:name]) %></td>
			<td><%= kill[:kills] %></td>
			<td><%= number_to_percentage(kill[:percentage], precision: 0) %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
<br/>

